<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动My_Service"
         />
    <Button
        android:id="@+id/btn_stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止My_Service"
        app:layout_constraintRight_toRightOf="parent"  />
    <Button
        android:id="@+id/btn_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定My_Service"
        app:layout_constraintTop_toBottomOf="@id/btn_start_service"
        />
    <Button
        android:id="@+id/btn_unbind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解绑My_Service"
        app:layout_constraintTop_toTopOf="@id/btn_bind_service"
        app:layout_constraintRight_toRightOf="parent"  />
    <Button
        android:id="@+id/btn_goto_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动OtherActivity"
        app:layout_constraintTop_toBottomOf="@id/btn_unbind_service"
        app:layout_constraintRight_toRightOf="parent"  />
</android.support.constraint.ConstraintLayout>